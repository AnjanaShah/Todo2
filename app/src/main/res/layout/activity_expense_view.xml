<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_expense_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.todo.ExpenseViewActivity">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/expense_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context="com.example.skand.tasker.ExpenseView">
        <ImageView
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:src="@drawable/rupees"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:ems="10"
            android:id="@+id/item"
            android:layout_weight="1"
            android:text="Title"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textStyle="normal|bold"
            android:textAlignment="center" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:ems="10"
            android:id="@+id/item_title"
            android:layout_weight="1" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:ems="10"
            android:id="@+id/Category"
            android:layout_weight="1"
            android:text="Category"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textStyle="normal|bold"
            android:textAlignment="center" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:ems="10"
            android:id="@+id/item_category"
            android:layout_weight="1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:ems="10"
            android:id="@+id/date"
            android:layout_weight="1"
            android:text="Purchase by"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textStyle="normal|bold"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:ems="10"
            android:id="@+id/dobydate"
            android:layout_weight="1" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:ems="10"
            android:id="@+id/item_quantity"
            android:layout_weight="1"
            android:text="Quantity"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textStyle="normal|bold"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:ems="10"
            android:id="@+id/quantity"
            android:layout_weight="1" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:ems="10"
            android:id="@+id/item_price"
            android:layout_weight="1"
            android:text="Price"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textStyle="normal|bold"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:ems="10"
            android:id="@+id/price"
            android:layout_weight="1" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:ems="10"
            android:id="@+id/ViewDescription"
            android:layout_weight="1"
            android:text="Description"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textStyle="normal|bold"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:ems="10"
            android:id="@+id/description"
            android:layout_weight="1" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:ems="10"
            android:layout_weight="1"
            android:text="Alarm"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textStyle="normal|bold"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:ems="10"
            android:id="@+id/alarm"
            android:layout_weight="1" />

    </LinearLayout>

</ScrollView>
